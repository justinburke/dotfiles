[user]
	#name = justinburke
	#email = justinburke@users.noreply.github.com

	# Force Git to prompt for user.email and user.name for each repository.
	useConfigOnly = true
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true

[branch]
  autosetupmerge = true
  autosetuprebase = always
[color]
  status = auto
  branch = auto
[alias]
  lg = log --graph --date=short --pretty=format:'%C(blue)%cd %C(magenta)| %C(blue)%h %C(magenta)| %Creset%s %C(yellow)<%an>%C(red)%d'
  lgf = log -C -M --follow --graph --date=short --pretty=format:'%C(blue)%cd %C(magenta)| %C(blue)%h %C(magenta)| %Creset%s %C(yellow)<%an>%C(red)%d'
  l  = log --name-status --relative
  lp = log -p --relative -b -w --stat
  d  = diff -w -b
  s = show -w -b --stat -p
  st = status -s -b
  ff = pull --ff-only
  b = branch
  co = checkout
[branch "master"]
  rebase = true
[push]
  default = simple
[git-p4]
	largeFileSystem = GitLFS
[merge]
#	ff = only

[fetch]
	prune = true
[commit]
	# Sign all commits by default.
	gpgsign = true
